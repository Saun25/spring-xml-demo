<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

    <bean id="movie" class="com.stackroute.domain.Movie"  autowire="constructor">

    </bean>

    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Jhonny Depp"></constructor-arg>
        <constructor-arg index="1" value="male"></constructor-arg>
        <constructor-arg index="2" value="54"></constructor-arg>
    </bean>

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg type="String" value="Brad Pitt"></constructor-arg>
        <constructor-arg type="String" value="male"></constructor-arg>
        <constructor-arg type="int" value="50"></constructor-arg>
    </bean>


    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0"  value="Tom Cruise"></constructor-arg>
        <constructor-arg index="1" value="male"></constructor-arg>
        <constructor-arg index="2" value="53"></constructor-arg>
    </bean>

</beans>